{
  "name": "wpsp-site",
  "version": "1.0.0",
  "description": "WordPress SÃ£o Paulo community site.",
  "scripts": {
    "sass": "node-sass --output-style compressed --source-map true -o assets/css src/scss",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers -r assets/css/*.css",
    "sync": "browser-sync start --files assets/css/*.css, assets/js/*.js, *.php",
    "build": "npm run sass && npm run autoprefixer",
    "watch": "concurrently --names \"SASS,JS\" -c \"white.bgMagenta.bold,black.bgYellow.bold\" \"npm run watch:sass\"",
    "watch:sass": "onchange \"src/**/*.scss\" -- npm run build",
    "watch:sync": "concurrently --names \"SASS,JS,SYNC\" -c \"white.bgMagenta.bold,black.bgYellow.bold,black.bgWhite.bold\" \"npm run watch:sass\" \"npm run watch:js\" \"npm run sync\""
  },
  "browserslist": {
    "production": [
      "last 2 versions"
    ],
    "development": [
      "last 2 versions"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "homepage": "https://wp.sampa.br",
  "dependencies": {
    "autoprefixer": "^7.1.4",
    "bootstrap": ">=4.3.1",
    "browser-sync": "^2.26.3",
    "concurrently": "^3.5.0",
    "node-sass": "^4.11.0",
    "onchange": "^3.2.1",
    "postcss": "^6.0.12",
    "postcss-cli": "^4.1.1",
    "postcss-import": "^11.0.0",
    "precss": "^2.0.0"
  }
}
